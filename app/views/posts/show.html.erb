<% flash.each do |type, msg| %>
  <div width="350">
    <%= msg %>
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
  </div>
<% end %>

<h1>Posts by <%= @user.name %></h1>
<div class="posts">
<%= render partial: 'shared/post', locals: { post: @post, length: 1/0.0 } %>
<div class="comments">
  <% @comments.each do |comment| %>
    <span>
      <%= comment.author.name %>: 
    </span>
    <span>
      <%= comment.text%>
    </span>
    <span>  
      <% if can? :destroy, comment %>
        <%= button_to 'Delete Comment', user_post_comment_path(@user, @post, comment), method: :delete, data: { confirm: "Are you sure you want to delete this comment?" }, class: 'delete btn btn-primary text-end' %>
      <% end %>
    </span>
  <% end %>
</div>
  <div class="add-post-btn d-flex">
    <button>
      <%= link_to "Add Comment", new_user_post_comment_path(@user, @post)%>
    </button>
  </div>

  <div class="add-post-btn d-flex"> 
    <%= button_to "Add Like", user_post_likes_path(@user, @post)%>
  </div>
</div>
