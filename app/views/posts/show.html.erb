<% flash.each do |type, msg| %>
  <div class="flash align-items-center text-secondary bg-warning border-0 rounded" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="d-flex">
      <div class="toast-body">
      <%= msg %>
      </div>
      <a href="#" class="btn-close btn-close-white me-2 m-auto" data-dismiss="alert" aria-label="close">&times;</a>
    </div>
  </div>
<% end %>

<h1>Posts by <%= @user.name %></h1>
<div class="posts">
<%= render partial: 'shared/post', locals: { post: @post, length: 1/0.0 } %>
<div class="border rounded pt-3 pb-5 px-3">
<%= "There are no comments" if @comments.empty? %>
  <% @comments.each do |comment| %>
    <div class="container row">
      <div class="col-md-10 d-flex">
        <div class="">
          <%= comment.author.name %>:
        </div>
        &nbsp
        <div id="text-justify">
          <%= comment.text %>
        </div>
      </div>
      <span class="col-md-2">  
        <% if can? :destroy, comment %>
          <%= button_to 'Delete Comment', user_post_comment_path(@user, @post, comment), method: :delete, data: { confirm: "Are you sure you want to delete this comment?" }, class: 'm-1 btn btn-danger text-end justify-self-end' %>
        <% end %>
      </span>
    </div>
  <% end %>
</div>
<div class="d-flex my-2">
    <div class="m-1">
        <%= link_to "Add Comment", new_user_post_comment_path(@user, @post), class: "btn btn-primary btn-lg" %>
    </div>

    <div class="m-1"> 
      <%= button_to "Add Like", user_post_likes_path(@user, @post), class: "btn btn-primary btn-lg"%>
    </div>
  </div>
</div>