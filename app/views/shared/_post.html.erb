<%= link_to user_post_path(@user.id, post.id) do %>  
  <div class="border rounded pt-3 pb-5 px-3">
    <div>
      <h3> <%= post.title %> </h3>
      <p class="pt-2"><%= truncate(post.text, length: length) %></p>
    </div>
    <div>
      <span>Comments: <%= post.comments_count || 0 %>,</span>
      <span>Likes: <%= post.likes_count || 0 %></span>
    </div>
  </div>
  <br>
<% end %>
